<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.file_field :image %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
