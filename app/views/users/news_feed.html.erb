<div class="container container-table">
	<h2>News Feed</h2>
	<table class="table table-bordered">
		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<div class="card cd" style="width: 40rem">
						<div class="card-header">
							<ul class="nav nav-tabs card-header-tabs">
							  
							  <li class="nav-item">
							    <a class="nav-link disabled" href="#"><%= post.user.first_name %></a>
							  </li>
							  <li class="nav-item">
							    <%= link_to 'Show Post', post_path(post.id) %>
							  </li>
							  <li class="nav-item">
							    <a class="nav-link" href="#">Comment</a>
							  </li>
							</ul>
						  	<%= post.created_at %>
						</div>
						<div class="card-block">
							<h4 class="card-title"><%= post.title %></h4>
							<%= image_tag post.image, :class => "card-img-top"%>
							<p class="card-text"><%= post.content %></p>
						</div>
					</div>				
				</tr>
			<% end %>
		</tbody>
	</table>
</div>