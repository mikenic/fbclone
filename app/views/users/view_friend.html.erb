<h2>view friend page</h2>

<dl class="dl-horizontal">
	<dt><strong>Profile Picture</strong></dt>
	<dd><%= image_tag @current_friend.avatar %></dd>
	<dt><strong>First Name</strong></dt>
	<dd><%= @current_friend.first_name %></dd>
	<dt><strong>Last Name</strong></dt>
	<dd><%= @current_friend.last_name %></dd>
	<dt><strong>Email</strong></dt>
	<dd><%= @current_friend.email %></dd>

</dl>


<h3>Posts</h3>

<table class="table table-bordered">
	<tbody>
		<% @current_friend.posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.content %></td>
				<td><%= image_tag post.image.thumb %></td>
				<td><%= post.longitude %></td>
				<td><%= post.latitude %></td>
			</tr>
		<% end %>
	</tbody>
</table>